<%= form_with(model: @post, local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="postform">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-7">
          <div class="mt-3 mx-auto">
            <%= f.label :ビジネスシーン %>
            <%= f.select :scene, [["アポイントメント", "アポイントメント"], ["日程調整", "日程調整"], ["依頼", "依頼"],
            ["問い合わせ", "問い合わせ"], ["報告", "報告"], ["お礼", "お礼"], ["謝罪", "謝罪"],
            ["クレーム", "クレーム"],["確認", "確認"],["提案", "提案"],
            ["催促", "催促"],["その他", "その他"]], { include_blank: '選択してください'}, class: "form-select" %>
          </div>
          <div class="mt-3 mx-auto">
            <%= f.label :件名 %>
            <div class="textarea">
              <%= f.text_area :subject_english, placeholder: "英語で入力して下さい", class: "form-control" %>
            </div>
          </div>
          <div class="mt-3">
            <%= f.label :メール本文 %>
            <%= f.rich_text_area :content_english, placeholder: "英語で入力して下さい", class: "form-control" %>
          </div>
          <div class="mt-3 d-grid">
            <%= f.submit "投稿", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
