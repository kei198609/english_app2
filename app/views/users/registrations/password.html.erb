<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="container">
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="row justify-content-center">
      <div class="col-md-4 mt-3">
        <%= render 'users/registrations/link_list' %>
      </div>

      <div class="col-md-8 mx-auto">
        <div class="mt-3">
          <%= f.label :password %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
            <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
          <% end %>
        </div>

        <div class="mt-3">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="mt-3">
          <%= f.label :current_password %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="actions mt-3 d-grid">
          <%= f.submit t('.update'), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>