<%= flash[:success] %>

<% if user_signed_in? %>
<%# seach section %>
<div class="container">
  <%= form_tag root_path, method: :get do %>
    <div class="row">
      <div class="col-4">
        <%= text_field_tag :content_english, params[:content_english], placeholder: "キーワードを入力してください", class: "form-control" %>
      </div>
      <div class="col-4">
        <%= select_tag :scene, options_for_select(Post.all.map{ |c| [c.scene, c.scene] }, params[:scene]), prompt: "カテゴリを選択してください", class: "form-select" %>
      </div>
      <div class="col-4">
        <%= submit_tag "検索", class: "btn btn-primary"%>
      </div>
    </div>
  <% end %>
</div>

<%# header section %>
<section>
  <div class="container">
    <div class="header border mt-4 mb-2">
      <div class="row">
        <div class="col-md-1 col-sm-2 col-2"></div>
        <div class="col-md-2 col-sm-2 col-2 d-flex align-items-center">名前</div>
        <div class="col-md-4 col-sm-2 col-2 d-flex align-items-center">職種</div>
        <div class="col-md-1 col-sm-2 col-2 d-flex align-items-center">投稿日</div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-2 d-flex align-items-center justify-content-center">投稿詳細</div>
        <div class="col-lg-2 col-md-2 col-sm-2 col-2 d-flex align-items-center justify-content-center">投稿削除</div>
      </div>
    </div>
  </div>
</section>

<%# feed section %>
  <%= render 'shared/feed' %>
  <%= paginate @feed_items %>
<% else %>

<% end %>