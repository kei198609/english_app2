<%= flash[:success] %>

<% if user_signed_in? %>
  <%# 検索フォームsection %>
<div class="container">
  <div class="row justify-content-center">
      <%= form_tag root_path, method: :get do %>
      <div class="col-lg">
        <%= text_field_tag :content_english, params[:content_english], placeholder: "キーワードを入力してください", class: "form-control" %>
      </div>
      <div class="col-lg">
        <%= select_tag :scene, options_for_select(Post.all.map{ |c| [c.scene, c.scene] }, params[:scene]), prompt: "カテゴリを選択してください", class: "form-select" %>
      </div>
      <div class="col-lg">
        <%= submit_tag "検索", class: "btn btn-primary"%>
      </div>
      <% end %>
  </div>
</div>

  <%= render 'shared/feed' %>
  <%= paginate @feed_items %>
<% else %>

<% end %>